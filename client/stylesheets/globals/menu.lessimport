#menu {
  .background-image(
    linear-gradient(top, rgba(85,134,223,.1), rgba(0,0,0,0) 100%),
    url('img/app/bg-menu-640x1136.jpg')
  );
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;

  a {
    .font-s2;

    color: rgba(255,255,255,.4);
    display: block;
    height: 142px;
    padding-top: 3rem;
    text-align: center;

    & + a {
      box-shadow: rgba(129,206,200,.1) 0 -1px 0 0;
    }

    &:hover,
    &:active,
    &.active {
      color: @color-empty;
    }

    .title-menu {
      .title-caps;
    }

    [class^="icon-"],
    [class*=" icon-"] {
      .font-m1;
      display: block;
      margin-bottom: .25rem;
    }
  }
}